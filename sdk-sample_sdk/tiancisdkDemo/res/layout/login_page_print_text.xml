<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/basic_padding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/wid_icon"
            android:layout_height="@dimen/wid_icon"
            android:src="@mipmap/icon_account" />

        <View
            android:layout_marginRight="10dp"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/divider" />

        <EditText
            android:id="@+id/et_login_account"
            android:textColorHint="@color/in_stroke"
            android:hint="@string/account_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null" />


    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/wid_icon"
            android:layout_height="@dimen/wid_icon"
            android:src="@mipmap/icon_psw" />

        <View
            android:layout_marginRight="10dp"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/divider" />

        <EditText
            android:password="true"
            android:id="@+id/et_login_psw"
            android:textColorHint="@color/in_stroke"
            android:hint="@string/psw_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null" />


    </LinearLayout>


</LinearLayout>